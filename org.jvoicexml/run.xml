<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project name="JVoiceXML Run Script" default="run" basedir=".">
    <description>
This file provides targets to run and stop the voice browser.
  </description>

    <import file="build.xml"/>

    <target name="-run-setup" depends="-setup">
        <path id="run.classpath">
            <path refid="project.classpath"/>
            <fileset refid="loggings.lib"/>
            <fileset refid="codec.lib"/>
            <pathelement path="${build}"/>
            <pathelement location="../org.jvoicexml.client/classes"/>
            <pathelement location="../org.jvoicexml.jndi/classes"/>
            <pathelement location="../org.jvoicexml.xml/classes"/>
            <pathelement location="../org.jvoicexml.processor.srgs/classes"/>
            <pathelement location="${config}"/>
        </path>

        <path id="run.librarypath">
<!--library path for the Kinect Recognizer-->
<pathelement location="C:\Users\dwalka\Documents\Entwicklung\JVoiceXML.git\JVoiceXML\org.jvoicexml.implementation.kinect/../org.jvoicexml.implementation.kinect.recognizer/x64/Debug"/>
<!--library path for JSAPI 2.0 SAPI-->
<pathelement location="-Djava.library.path=C:\Users\dwalka\Documents\Entwicklung\JVoiceXML.git\JVoiceXML\org.jvoicexml.implementation.jsapi20/3rdparty/jsapi2.0/lib"/>
<!--library path for Cloudgarden-->
<pathelement location="../org.jvoicexml.implementation.jsapi10/3rdparty/talkingjava/lib"/>
            <pathelement location="${dist}"/>
        </path>
        
        <pathconvert property="run.librarypath.converted" refid="run.librarypath"/>
        
        <path id="shutdown.classpath">
            <path refid="project.classpath"/>
            <fileset refid="loggings.lib"/>
            <pathelement location="../org.jvoicexml.client/classes"/>
            <pathelement location="../org.jvoicexml.jndi/classes"/>
            <pathelement location="../org.jvoicexml.xml/classes"/>
            <pathelement location="${build}"/>
            <pathelement location="${config}"/>
        </path>
    </target>

    <target name="run" description="Run the VoiceXML interpreter" depends="jar,-run-setup">
        <java classname="org.jvoicexml.startup.Startup" fork="true" maxmemory="256m">
<!--Added path for org.jvoicexml.config configuration settings-->
<classpath>
<pathelement location="dist/org.jvoicexml.config.jar"/>
<fileset dir="C:\Users\dwalka\Documents\Entwicklung\JVoiceXML.git\JVoiceXML\org.jvoicexml.config/3rdparty/springframework4.2.0/lib">
<include name="spring-core-4.2.0.RELEASE.jar"/>
<include name="spring-beans-4.2.0.RELEASE.jar"/>
<include name="spring-context-4.2.0.RELEASE.jar"/>
<include name="spring-expression-4.2.0.RELEASE.jar"/>
</fileset>
</classpath>
<jvmarg value="-Dgjtapi.sip.properties=/gjtapi-provider.properties"/>
<jvmarg value="-Djava.protocol.handler.pkgs=org.jlibrtp.protocols"/>
<jvmarg value="-Djava.protocol.handler.pkgs=org.jsapi2.protocols"/>
            <jvmarg value="-Djava.library.path=${run.librarypath.converted}"/>
            <jvmarg value="-Djava.util.logging.config.file=${config}/logging.properties"/>
            <jvmarg value="-Djava.security.policy=${config}/jvoicexml.policy"/>
            <classpath refid="run.classpath"/>
        </java>
    </target>

    <target name="debug" description="Run the VoiceXML interpreter in debug mode" depends="jar,-run-setup">
        <java classname="org.jvoicexml.startup.Startup" fork="true" maxmemory="256m">
<!--Added path for org.jvoicexml.config configuration settings-->
<classpath>
<pathelement location="dist/org.jvoicexml.config.jar"/>
<fileset dir="C:\Users\dwalka\Documents\Entwicklung\JVoiceXML.git\JVoiceXML\org.jvoicexml.config/3rdparty/springframework4.2.0/lib">
<include name="spring-core-4.2.0.RELEASE.jar"/>
<include name="spring-beans-4.2.0.RELEASE.jar"/>
<include name="spring-context-4.2.0.RELEASE.jar"/>
<include name="spring-expression-4.2.0.RELEASE.jar"/>
</fileset>
</classpath>
<jvmarg value="-Dgjtapi.sip.properties=/gjtapi-provider.properties"/>
<jvmarg value="-Djava.protocol.handler.pkgs=org.jlibrtp.protocols"/>
<jvmarg value="-Djava.protocol.handler.pkgs=org.jsapi2.protocols"/>
            <jvmarg value="-Djava.util.logging.config.file=${config}/logging.properties"/>
            <jvmarg value="-Djava.security.policy=${config}/jvoicexml.policy"/>
            <jvmarg value="-agentlib:jdwp=transport=dt_socket,server=y,address=12367"/>
            <classpath refid="run.classpath"/>
        </java>
    </target>

    <target name="shutdown" description="Terminates the VoiceXML interpreter" depends="jar,-run-setup">
        <java classname="org.jvoicexml.startup.Shutdown" fork="true">
<!--Added path org.jvoicexml.config configuration settings-->
<classpath>
<pathelement location="dist/org.jvoicexml.config.jar"/>
<fileset dir="../org.jvoicexml.config/3rdparty/springframework4.2.0/lib">
<include name="spring-core-4.2.0.RELEASE.jar"/>
<include name="spring-beans-4.2.0.RELEASE.jar"/>
<include name="spring-context-4.2.0.RELEASE.jar"/>
<include name="spring-expression-4.2.0.RELEASE.jar"/>
</fileset>
</classpath>
            <jvmarg value="-Djava.security.policy=${config}/jvoicexml.policy"/>
            <classpath refid="shutdown.classpath"/>
        </java>
    </target>
</project>
